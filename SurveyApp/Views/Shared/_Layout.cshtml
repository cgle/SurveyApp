<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <style type="text/css">
        .navbar-static-top {
            margin-bottom: 19px;
        }
    </style>
    @Scripts.Render("~/bundles/jquery")
    <script src="/Scripts/bootstrap.js"></script>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("script",false)

</head>
@RenderSection("active", required: false)




<body>
    @{var r_active = ""; var re_active = ""; var s_active = "";
      if (Request.RawUrl.ToString().ToLower().Contains("/response")) { r_active = "active"; }
      if (Request.RawUrl.ToString().ToLower().Contains("/report")) { re_active = "active"; } 
      if (Request.RawUrl.ToString().ToLower().Contains("/survey")) { s_active = "active"; }
    }
    <header class="navbar navbar-default navbar-static-top">
        <div class="container">
            <p class="navbar-brand">@Html.ActionLink("A survey application", "Index", "Home")</p>
            <ul class="nav navbar-nav" id="nav-main">
                <li class="@r_active"><a href="/response">Responses</a></li>
                <li class="@re_active"><a href="/report">Reports</a></li>
                <li class="@s_active"><a href="/survey">Survey admin</a></li>
            </ul>


            <ul class="navbar-nav navbar-right">
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </header>

    <div class="container">
        <div id="body">
            @*<div class="jumbotron"> @RenderSection("featured", required: false)</div>*@

            <section>
                @RenderBody()
            </section>
        </div>
        <br />
        <br />
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p><b>&copy; @DateTime.Now.Year - A survey application built with ASP.NET</b></p>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
