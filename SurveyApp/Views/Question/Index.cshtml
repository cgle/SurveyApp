@model IEnumerable<SurveyApp.Models.Question>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Survey.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.options)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
